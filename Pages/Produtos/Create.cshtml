@page
@model VitrineExpress.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.ImagemUrl" class="control-label"></label>
                <input asp-for="Produto.ImagemUrl" class="form-control" />
                <span asp-validation-for="Produto.ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.QuantidadeEstoque" class="control-label"></label>
                <input asp-for="Produto.QuantidadeEstoque" class="form-control" />
                <span asp-validation-for="Produto.QuantidadeEstoque" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produto.ControlaEstoque" /> @Html.DisplayNameFor(model => model.Produto.ControlaEstoque)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produto.Disponivel" /> @Html.DisplayNameFor(model => model.Produto.Disponivel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produto.EmDestaque" /> @Html.DisplayNameFor(model => model.Produto.EmDestaque)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Produto.LojaId" class="control-label"></label>
                <select asp-for="Produto.LojaId" class ="form-control" asp-items="ViewBag.LojaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Categoria" class="control-label"></label>
                <select asp-for="Produto.Categoria" class="form-control"></select>
                <span asp-validation-for="Produto.Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Subcategoria" class="control-label"></label>
                <select asp-for="Produto.Subcategoria" class="form-control"></select>
                <span asp-validation-for="Produto.Subcategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
